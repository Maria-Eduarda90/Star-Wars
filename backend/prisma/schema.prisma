generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Comment {
  id          String @id @default(uuid())
  comment     String
  created_at  DateTime @default(now())

  @@map("comments")
}